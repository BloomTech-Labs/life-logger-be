type User {
  id: ID! @id
  username: String!
  password: String!
  email: String! @unique
  createdAt: DateTime! @createdAt
  events: [Event!]!
}

type Event {
  id: ID! @id
  title: String!
  description: String!
  location: Location
  category: String! @default(value: "uncategorized")
  createdBy: User
  createdAt: DateTime! @createdAt
  startsAt: DateTime
  endsAt: DateTime
}

type Location {
  id: ID! @id
  latitude: Float!
  longitude: Float!
}